@{
    ViewData["Title"] = "Delete Application";
}
@model FormModel

<h2>Please Confirm Deletion</h2>
<h4>Are sure you want to delete @Model.Title?</h4>
<form asp-action="Delete" method="post" class="form-text" asp-controller="Home">
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-outline-primary">Go Back</a>
    <button class="btn btn-danger" type="submit">Delete</button>

    <input type="hidden" asp-for="Movieid" />
</form>