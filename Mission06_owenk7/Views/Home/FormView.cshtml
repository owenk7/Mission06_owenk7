@{
    ViewData["Title"] = "Add A Movie To My Watchlist";
}
@model Mission06_owenk7.Models.FormModel;

<h2>Send Us Movie For Us To Review: </h2>

<div>
    <form method="post">
        <label>Movie Title: </label>
        <input id="title" type="text" asp-for="title" value="" />
        <br />
        <label>Year: </label>
        <input id="year" type="number" asp-for="year" value="" />
        <br />
        <label>Category: </label>
        <select id="cat" name="cat" asp-for="cat">
            <option value="Action/Adventure">Action/Adventure</option>
            <option value="Comedy">Comedy</option>
            <option value="Drama">Drama</option>
            <option value="Family">Family</option>
            <option value="Horror/Suspense">Horror/Suspense</option>
            <option value="Miscellaneous">Miscellaneous</option>
            <option value="Television">Television</option>
            <option value="VHS">VHS</option>
        </select>
        <br />
        <label>Director: </label>
        <input id="director" type="text" asp-for="director" value="" />
        <br />
        <label>Rating: </label>
        <select id="rating" name="rating" asp-for="rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label>Edited: Yes/No </label>
        <input type="checkbox" name="edited" asp-for="edited" />
        <!--
        <select id="edited" name="edited" asp-for="edited">
        <option value="false">No</option>
        <option value="true">Yes</option>
        </select>
        -->

        <br />
        <label>Lent to: </label>
        <input id="lent" type="text" asp-for="lent" value="" />
        <br />
        <label>Notes</label>
        <input id="notes" type="text" asp-for="notes" value="" />
        <br />
        <button type="submit">Submit Movie</button>

        <div asp-validation-summary="All"></div>
    </form>
</div>
<script src="~/js/JavaScript.js"></script>