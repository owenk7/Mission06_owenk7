@{
    ViewData["Title"] = "Movie List";
}
@model List<FormModel>

<table class="table table-bordered table-striped">

    <thead class="font-weight-bolder">
        <tr>
            <td>Title</td>
            <td>Year</td>
            <td>Category</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited Y/N</td>
            <td>Lent to:</td>
            <td>Notes:</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Category.CategoryName</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.Lent</td>
                <td>@x.Notes</td>

                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.Movieid">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.Movieid">Delete</a></td>
            </tr>
        }
    </tbody>
</table>